{
    "require": {
        "prefix": "req",
        "body": [
            "require(\"${1:module}\")"
        ],
        "description": "Require module"
    },
    "locreq": {
        "prefix": "lreq",
        "body": [
            "local ${1:var} = require(\"${2:module}\")"
        ],
        "description": "Require module as a variable"
    },
    "if": {
        "prefix": "if",
        "body": [
            "if ${1:true} then",
            "\t$0",
            "end"
        ]
    },
    "elseif": {
        "prefix": "elseif",
        "body": [
            "elseif ${1:true} then",
            "\t$0"
        ]
    },
    "for": {
        "prefix": "for",
        "body": [
            "for ${1:i}=${2:1},${3:10} do",
            "\t$0",
            "end"
        ],
        "description": "for loop range"
    },
    "fori": {
        "prefix": "fori",
        "body": [
            "for i,v in ipairs(${1:table}) do",
            "\t$0",
            "end"
        ]
    },
    "forp": {
        "prefix": "forp",
        "body": [
            "for k,v in pairs(${1:table}) do",
            "\t$0",
            "end"
        ]
    },
    "function": {
        "prefix": "fun",
        "body": [
            "function ${1:name}($2)",
            "\t${3:-- code}",
            "end"
        ]
    },
    "print": {
        "prefix": "pr",
        "body": [
            "print(${0})"
        ]
    },
    "while": {
        "prefix": "while",
        "body": [
            "while ${1:true} do",
            "\t$0",
            "end"
        ]
    }
}
